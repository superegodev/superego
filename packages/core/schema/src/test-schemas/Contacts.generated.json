{
  "$defs": {
    "Type": {
      "title": "Type",
      "description": "Type of contact.\n\n## Enum members\n\n### Person\n\nA single human.\n\n### Organization\n\nA company, non-profit, government entity, group, etc.",
      "type": "string",
      "enum": [
        "Person",
        "Organization"
      ]
    },
    "Phone": {
      "title": "Phone",
      "type": "object",
      "properties": {
        "number": {
          "description": "The actual phone number.",
          "type": "string"
        },
        "description": {
          "description": "A description for the phone number. (Personal, work, etc.)",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "number",
        "description"
      ]
    },
    "Email": {
      "title": "Email",
      "type": "object",
      "properties": {
        "address": {
          "description": "The actual email address.",
          "type": "string"
        },
        "description": {
          "description": "A description for the email address. (Personal, work, etc.)",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "address",
        "description"
      ]
    },
    "JsonObject": {
      "title": "JsonObject",
      "type": "object",
      "properties": {
        "__dataType": {
          "type": "string",
          "const": "JsonObject"
        }
      },
      "required": [
        "__dataType"
      ],
      "additionalProperties": true
    }
  },
  "title": "Contact",
  "description": "A contact in my address book.",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "#/$defs/Type"
    },
    "name": {
      "description": "Name of the contact. Either the full name for a person, or the organization name for an organization.",
      "type": "string"
    },
    "relation": {
      "description": "Who they are to me.",
      "type": [
        "string",
        "null"
      ]
    },
    "phones": {
      "description": "Their phone numbers",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Phone"
      }
    },
    "emails": {
      "description": "Their email addresses",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Email"
      }
    },
    "notes": {
      "description": "Misc notes about the contact\n\n## Format `dev.superego:JsonObject.TiptapRichText`\n\nA rich-text document as represented, in JSON, by the Tiptap rich-text editor.",
      "examples": [
        {
          "__dataType": "JsonObject",
          "type": "doc",
          "content": []
        },
        {
          "__dataType": "JsonObject",
          "type": "doc",
          "content": [
            {
              "type": "paragraph",
              "attrs": {
                "textAlign": null
              },
              "content": [
                {
                  "type": "text",
                  "text": "Hello, World!"
                }
              ]
            }
          ]
        }
      ],
      "anyOf": [
        {
          "$ref": "#/$defs/JsonObject"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "type",
    "name",
    "relation",
    "phones",
    "emails",
    "notes"
  ]
}