{
  "name": "@superego/root",
  "version": "2025.7.6",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "test": "yarn workspaces foreach --all --topological-dev --verbose run test run",
    "check-types": "yarn workspaces foreach --all --topological-dev --verbose run check-types",
    "check-linting": "biome lint",
    "fix-linting": "biome lint --write",
    "check-formatting": "biome check --linter-enabled=false && prettier --list-different \"**/*.(md|yml|sql|sh)\"",
    "fix-formatting": "biome check --linter-enabled=false --write && prettier --write \"**/*.(md|yml|sql|sh)\"",
    "build-demo": "yarn workspace @superego/demo-app build",
    "deploy-demo": "yarn workspace @superego/demo-app deploy",
    "build-electron": "yarn workspace @superego/electron-app build",
    "deploy-electron": "yarn workspace @superego/electron-app deploy",
    "prepare-release": "scripts/prepare-release.sh",
    "playwright": "playwright"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-sql-cst": "^0.13.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@4.9.4+sha512.7b1cb0b62abba6a537b3a2ce00811a843bea02bcf53138581a6ae5b1bf563f734872bd47de49ce32a9ca9dcaff995aa789577ffb16811da7c603dcf69e73750b"
}
